<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_layout"
    android:layout_width="300dp"
    android:layout_height="350dp"
    android:elevation="1dp"
    tools:context=".DrawerLayout">

    <ImageView
        android:id="@+id/back"
        android:layout_width="37dp"
        android:layout_height="22dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/others2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:onClick="showOthers2"
        android:src="@drawable/img_others"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/seekBar"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="29dp"
        android:max="10"
        android:onClick="setFontSize"
        android:progress="3"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="@+id/others2"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="101dp"
        android:layout_height="22dp"
        android:layout_marginTop="59dp"
        android:layout_marginBottom="59dp"
        android:text="시스템 설정"
        android:textSize="6pt"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/thema1"
        app:layout_constraintStart_toEndOf="@+id/thema1"
        app:layout_constraintTop_toTopOf="@+id/thema2" />

    <ImageView
        android:id="@+id/thema2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:onClick="setThema2"
        android:src="@drawable/img_thema2"
        app:layout_constraintEnd_toStartOf="@+id/others"
        app:layout_constraintTop_toTopOf="@+id/others" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="75dp"
        android:onClick="setMode"
        android:text="Light"
        android:textOff="Light"
        android:textOn="Dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/darkmode"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/mode"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/mode"
        android:layout_width="37dp"
        android:layout_height="0dp"
        android:layout_marginStart="87dp"
        android:layout_marginEnd="87dp"
        android:src="@drawable/ic_lightmode"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/others2"
        app:layout_constraintStart_toStartOf="@+id/back"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <ImageView
        android:id="@+id/darkmode"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:src="@drawable/ic_darkmode"
        app:layout_constraintBottom_toBottomOf="@+id/mode"
        app:layout_constraintEnd_toEndOf="@+id/others2"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/mode" />

    <ImageView
        android:id="@+id/others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="9dp"
        android:onClick="showOthers"
        android:src="@drawable/img_others"
        app:layout_constraintBottom_toTopOf="@+id/others2"
        app:layout_constraintEnd_toEndOf="@+id/others2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="103dp"
        android:layout_height="20dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="13dp"
        android:onClick="setLanguage"
        android:text="Korean"
        android:textSize="6pt"
        app:layout_constraintBottom_toTopOf="@+id/switch1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/others2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:text="언어"
        android:textColor="#000000"
        android:textSize="6pt"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="테마"
        android:textColor="#000000"
        android:textSize="6pt"
        app:layout_constraintBottom_toBottomOf="@+id/thema1"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/thema1"
        app:layout_constraintVertical_bias="0.483" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="모드"
        android:textColor="#000000"
        android:textSize="6pt"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="37dp"
        android:text="글꼴"
        android:textColor="#000000"
        android:textSize="6pt"
        app:layout_constraintEnd_toStartOf="@+id/seekBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <ImageView
        android:id="@+id/thema1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:onClick="setThema1"
        android:src="@drawable/img_thema1"
        app:layout_constraintEnd_toStartOf="@+id/thema2"
        app:layout_constraintTop_toTopOf="@+id/thema2" />

</androidx.constraintlayout.widget.ConstraintLayout>