<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dialist" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item> <!--Status Bar의 배경색-->
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item> <!--Status Bar 아이콘의 색상 true:검은 아이콘, false:흰 아이콘-->

        <item name="toolbarStyle">@color/black</item> <!--Toolbar 스타일-->
        <item name="actionMenuTextColor">@color/black</item> <!--액션 메뉴의 텍스트 색상-->
        <item name="colorControlNormal">@color/browser_actions_bg_grey</item> <!--홈/뒤로가기 버튼의 색상-->

        <item name="android:background">@color/black</item> <!-- Toolbar의 배경색-->
        <item name="titleTextAppearance">@color/black</item> <!-- Toolbar의 타이틀 텍스트-->
        <item name="subtitleTextAppearance">@color/black</item> <!-- Toolbar의 서브타이틀 텍스트-->

        <item name="android:textColor">@color/white</item> <!-- Toolbar의 타이틀 텍스트 색상-->
    </style>
</resources>