<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.dialist">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dialist"
        android:requestLegacyExternalStorage="true" >
        <activity
            android:name=".PopupShare"
            android:theme="@style/Theme.AppCompat.DayNight.Dialog" />
        <activity android:name=".Share"
            android:exported="false"/>
        <activity
            android:name=".AllPages"
            android:theme="@style/Theme.AppCompat.DayNight.Dialog" />
        <activity
            android:name=".PaintView"
            android:exported="false" />
        <activity
            android:name=".PaletteBarSelect"
            android:theme="@style/Theme.AppCompat.DayNight.Dialog" />
        <activity
            android:name=".Add_items"
            android:theme="@style/Theme.AppCompat.DayNight.Dialog" />
        <activity
            android:name=".AddNewPage"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".delete_email_enter_password"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".Really_Delete_email"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".PasswordReset"
            android:exported="false" />
        <activity
            android:name=".SignUp"
            android:exported="false" />
        <activity
            android:name=".First"
            android:exported="false" />
        <activity
            android:name=".Store"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.dialist"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>
    </application>

</manifest>